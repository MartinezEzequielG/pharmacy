{% extends 'base.html.twig' %}

{% block body %}
    <h1>Country list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in country %}
            <tr>
                <td><a href="{{ path('show_country', { 'id': country.id }) }}">{{ country.id }}</a></td>
                <td>{{ country.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('show_country', { 'id': country.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('edit_country', { 'id': country.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('new_country') }}">Create a new country</a>
        </li>
    </ul>
{% endblock %}
